@model ExtremeSports2.Data.Entities.Country



<table class="table table-striped table-responsive-md table-bordered smfont" id="StatesTable">
    <colgroup>
        <col span="1" />
        <col span="1" />
    </colgroup>
  
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.States.FirstOrDefault().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.States.FirstOrDefault().CitiesNumber)
            </th>
            <th>
                <button onclick="showInPopup('@Url.Action("AddState", "Countries", new { id =Model?.Id }, Context.Request.Scheme)' , 'Nuevo Departamento / Estado')" class="primary-button">Nuevo Departamento / Estado</button>
                @*<a onclick="showInPopup('@Url.Action("AddState", "Countries", new { id =Model?.Id}, Context.Request.Scheme)' , 'Nuevo Departamento / Estado')" class="icon_add hero__cta"> <i class="ri-add-circle-fill"></i></a>*@
              @*  <a onclick="showInPopup('@Url.Action("AddState", "Countries", new { id = Model?.Id }, Context.Request.Scheme)' , 'Nuevo Estado / Departamento')" class="btn btn-sm btn-primary text-white"><i class="fa fa-plus-circle"></i></a>*@
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model?.States)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                   
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CitiesNumber)
                </td>
                <td>
                    <a title="Editar" onclick="showInPopup('@Url.Action("EditState", "Countries", new { id = item.Id }, Context.Request.Scheme)' , 'Actualizar Estado / Departamento')" class="icon_edit"><i class="ri-pencil-fill"></i> </a>
                    <a title="Detalle" asp-action="DetailsState" asp-controller="Countries" asp-route-Id="@item.Id" class="icon_edit"><i class="ri-eye-fill"></i></a>
                    <a title="Eliminar" data-id="@item.Id" class="icon_delete deleteItem" data-bs-toggle="modal" data-bs-target="#deleteDialog"><i class="ri-delete-bin-2-fill"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
