@model ExtremeSports2.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
    
}



<link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />

    <section>
    <flash dismissable="true" />
    <div class="login-box login">
        <form asp-action="Login">
                <h2>Inicio de sesión</h2>
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            <div class="input-box">

                <input asp-for="Username" autocomplete="off" >
                <label asp-for="Username" class="label-login"></label>
                <i class="ri-mail-fill"></i>
                <span asp-validation-for="Username" class="text-danger"></span>

            </div>
            <div class="input-box">

                <input asp-for="Password">
                <label asp-for="Password" class="label-login"></label>
                <i class="ri-lock-password-fill"></i>
               
                <span asp-validation-for="Password" class="text-danger"></span>
              
                
            </div>
                <div class="remember-forgot">
                <label asp-for="RememberMe">
                    <input asp-for="RememberMe" type="checkbox"  id="remember"> Recordar
                </label>
                <a asp-action="RecoverPassword">Olvido la contraseña?</a>
                </div>

             
            <button input type="submit" value="Login" class="btn-login">Iniciar Sesión</button>
                <div class="register-link">
                <p>No tienes una cuenta? <a asp-action="Register"> Registrate</a></p>
                </div>
            </form>
        </div>
    </section>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
