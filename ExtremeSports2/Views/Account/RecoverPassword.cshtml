@model ExtremeSports2.Models.RecoverPasswordViewModel

@{
    ViewData["Title"] = "Recover Password";
}

<link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />

<section>
    <flash dismissable="true" />
    <div class="login-box login">
        <form method="post">
            <h2>Recuperación</h2>
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            <div class="input-box">

                <input asp-for="Email" autocomplete="off">
                <label asp-for="Email" class="label-login"></label>
                <i class="ri-mail-fill"></i>
                <span asp-validation-for="Email" class="text-danger"></span>

            </div>
         


            <button input type="submit" value="Recuperación de Contraseña" class="btn-login">Recuperación de Contraseña</button>
            <div class="register-link">
                <p><a asp-action="Login">Regresar</a></p>
            </div>
        </form>
    </div>
</section>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


