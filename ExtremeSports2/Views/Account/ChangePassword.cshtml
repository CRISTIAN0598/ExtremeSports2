<section>
   
    <div class="login-box login">
       
        <form asp-action="ChangePassword" class="form-register">
            <flash dismissable="true" />
            <h2>Cambio de contraseña</h2>
         
            <div class="form-container">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div>
                    <div class="input-box">

                        <input asp-for="OldPassword">
                        <label asp-for="OldPassword" class="label-login"></label>
                        <span asp-validation-for="OldPassword   " class="text-danger"></span>

                    </div>
                    <div class="input-box">

                        <input asp-for="NewPassword">
                        <label asp-for="NewPassword" class="label-login"></label>
                        <span asp-validation-for="NewPassword" class="text-danger"></span>

                    </div>
                    <div class="input-box">

                        <input asp-for="Confirm">
                        <label asp-for="Confirm" class="label-login"></label>
                        <span asp-validation-for="Confirm" class="text-danger"></span>

                    </div>


                </div>
            
            </div>
            <button type="submit" class="btn-login">Guardar</button>
            @*   <a  class="primary-button" style="margin-top:10px;">Cambiar Contraseña</a>*@
            <div class="register-link">
                <a asp-action="ChangeUser">Regresar</a>
            </div>
        </form>

    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
